<suite name="TRP Parallel classes Suite" parallel="classes" thread-count="5" verbose="10">
    <listeners>
        <listener class-name="ch.racic.trp.testng.listenerAll.TrpSuiteListener"/>
        <listener class-name="ch.racic.trp.testng.listenerAll.TrpTestListener"/>
        <listener class-name="ch.racic.trp.testng.listenerAll.TrpInvokedMethodListener"/>
        <listener class-name="ch.racic.trp.testng.listenerAll.TrpReporter"/>
        <listener class-name="ch.racic.trp.testng.listenerAll.TrpAnnotationTransformer"/>
        <listener class-name="ch.racic.trp.testng.listenerAll.TrpMethodInterceptor"/>
    </listeners>
    <test name="Try 1">
        <classes>
            <class name="ch.racic.trp.samples.SampleTest"/>
            <class name="ch.racic.trp.samples.SampleTest2"/>
        </classes>
    </test>
    <test name="Try 2">
        <classes>
            <class name="ch.racic.trp.samples.SampleTest"/>
            <class name="ch.racic.trp.samples.SampleTest2"/>
        </classes>
    </test>
</suite>
